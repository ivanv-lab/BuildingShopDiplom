@{
    ViewBag.Title = "Главная";
}

<div class="loader"></div>

<script src="~/Scripts/Custom/Home/HomeControllerScript.js"></script>
<main>
    <header>
        <h1 class="my-custom-header">СтройБат</h1>
    </header>
    <div class="accordion accordion-collapse" id="accordionFlushExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    График заказов
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="form-control">
        <div class="d-grid gap-2">
            @Html.ActionLink("Добавить клиента", "Create", "Клиент", new { area = "" }, new { @class = "my-custom-link" })
            @Html.ActionLink("Добавить заказ", "Create", "Заказ", new { area = "" }, new { @class = "my-custom-link" })
            @Html.ActionLink("Добавить категорию", "Create", "Категория_товаров", new { area = "" }, new { @class = "my-custom-link" })
            @Html.ActionLink("Добавить сотрудника", "Create", "Сотрудник", new { area = "" }, new { @class = "my-custom-link" })
            @Html.ActionLink("Добавить товар", "Create", "Товар", new { area = "" }, new { @class = "my-custom-link" })
        </div>
    </div>
    <script src="~/Scripts/Custom/LoaderScript.js"></script>
</main>