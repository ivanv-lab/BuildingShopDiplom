@model BuildingShop.Models.Заказ

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование заказа</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>№@Model.id</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            Клиент
            <div class="col-md-10">
                @Html.DropDownList("id_клиента", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_клиента, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Сотрудник
            <div class="col-md-10">
                @Html.DropDownList("id_сотрудника", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_сотрудника, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Готовность, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Готовность)
                    @Html.ValidationMessageFor(model => model.Готовность, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Дата, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Дата, new { htmlAttributes = new { @class = "form-control", @id="dateInput" } })
                @Html.ValidationMessageFor(model => model.Дата, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Сумма, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Сумма, new { htmlAttributes = new { @class = "form-control", @readonly="true"} })
                @Html.ValidationMessageFor(model => model.Сумма, "", new { @class = "text-danger" })
            </div>
        </div>
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить" class="my-custom-button" />
                    @Html.ActionLink("Назад", "Index", new { }, new { @class = "my-custom-link" })
                </div>
            </div>
        </p>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
