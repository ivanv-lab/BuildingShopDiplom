@model PagedList.IPagedList<BuildingShop.Models.Категория_товаров>
@using PagedList.Mvc;

<div class="table-responsive">
    <table class="table" , id="NewTableId">
        <tr>
            <th>
                @Html.ActionLink("Номер", "Index", new { sortOrder = ViewBag.IdSortParm }, new { @class = "my-custom-button" })
            </th>
            <th>
                @Html.ActionLink("Наименование", "Index", new { sortOrder = ViewBag.NameSortParm }, new { @class = "my-custom-button" })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Наименование)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.id }, new { @class = "my-custom-link" })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.id }, new { @class = "my-custom-link" })
                </td>
            </tr>
        }

    </table>
</div>
<div class="d-print-none">

    Страница @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
