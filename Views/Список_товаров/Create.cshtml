@model BuildingShop.Models.Список_товаров
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id_заказа)
}
@{
    ViewBag.Title = "Добавление";
}
<script src="~/Scripts/Custom/LoaderScript.js"></script>

<div class="loader"></div>

<h2>Создание пункта заказа</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Товар
        <div class="col-md-10">
            @Html.DropDownList("id_товара", null, htmlAttributes: new { @class = "form-control", @id = "id_товара" })
            <script src="~/Scripts/Custom/Product_list/CreateScript.js"></script>
            @Html.ValidationMessageFor(model => model.id_товара, "", new { @class = "text-danger" })
        </div>
    </div>

    <div id="imgDiv" class="form-group">
        @Html.Label("Изображение", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
                <img id="productImage" class="form-control" src="" alt="Изображение товара" style="display:none; max-width:300px; max-height:300px;" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Количество на складе", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model=>model.Товар.Количество, new { htmlAttributes = new { @class = "form-control", @id = "productCount", @readonly = "true" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Количество", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Кол_во, new { htmlAttributes = new { @class = "form-control",@id="count"} })
            @Html.ValidationMessageFor(model => model.Кол_во, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Цена, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Цена, "Цена", new { htmlAttributes = new { @class = "form-control", @id = "Цена", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.Цена, "", new { @class = "text-danger" })
        </div>
    </div>

    <p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="my-custom-button" />
                @Html.ActionLink("Назад", "../Заказ/Details", new { @id = ViewBag.id_заказа }, new { @class = "my-custom-link" })
            </div>
        </div>
    </p>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}
