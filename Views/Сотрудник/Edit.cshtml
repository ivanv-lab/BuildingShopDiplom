@model BuildingShop.Models.Сотрудник

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование сотрудника</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>№@Model.id</h4>
        <hr />
